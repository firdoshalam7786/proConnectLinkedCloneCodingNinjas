{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",   // ðŸ”¥ bundler -> node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",               // ðŸ”¥ baseUrl add
    "paths": {
      "@/*": ["src/*"]            // âœ… src se alias
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",                   // ðŸ”¥ saare JS/JSX cover
    "src"
  ],
  "exclude": ["node_modules"]
}
